<div class="card shrink-0 w-full max-w-sm mx-auto shadow-2xl bg-base-100">
  <%= form_with(model: user, class: 'card-body') do |form| %>
    <%= render 'shared/error_messages', object: form.object %>

    <div class="form-control">
      <%= form.label :email, class: 'label' %>
      <%= form.email_field :email, class: "input input-bordered input-primary w-full max-w-xs" %>
    </div>

    <div class="form-control">
      <%= form.label :password, class: 'label' %>
      <%= form.password_field :password, class: "input input-bordered input-primary w-full max-w-xs" %>
    </div>

    <div class="form-control">
      <%= form.label :password_confirmation, class: 'label' %>
      <%= form.password_field :password_confirmation, placeholder: t('.type_password_again'),class: "input input-bordered input-primary w-full max-w-xs" %>
    </div>

    <div class="form-control mt-6 text-center">
      <%= form.submit class: 'btn btn-accent' %>
    </div>
  <% end %>
</div>