<%= turbo_frame_tag 'location-select-boxes' do %>
  <div class="join flex">
    <%= select :shop, :prefecture, Prefecture.selectable.map{ |p| [p.name, prefecture_areas_path(p)] }, { selected: prefecture_areas_path(@prefecture) }, { onchange: "Turbo.visit(value, {frame: 'location-select-boxes'})", class: 'select select-bordered select-sm select-primary join-item' } %>
    <%= select :shop, :area_id, @prefecture.areas.pluck(:name, :id), { include_blank: t('defaults.selection_required') }, { class: 'select select-bordered select-sm select-primary join-item grow' } %>
  </div>
<% end %>