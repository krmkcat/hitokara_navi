<div class="card shrink-0 w-full mx-auto shadow-2xl bg-accent/10">
  <%= form_with(model: review.persisted? ? review : [shop, review], class: "card-body p-6") do |form| %>
    <%= render 'shared/error_messages', object: form.object %>

    <div class="form-control">
      <div class="indicator w-full">
        <span class="indicator-item indicator-bottom indicator-center badge badge-secondary badge-sm rounded"><%= t('defaults.preferences_rating') %></span>
        <div class="w-full mx-2 flex flex-col gap-y-4 px-2 pt-2 pb-6 bg-base-100/50 border border-dotted border-secondary rounded-lg">
          <%= render 'rating_for_form', form: form, field: :minimal_interaction, prefix: 'int', description: t('defaults.description.minimal_interaction') %>
          <%= render 'rating_for_form', form: form, field: :equipment_customization, prefix: 'eqcust', description: t('defaults.description.equipment_customization') %>
          <%= render 'rating_for_form', form: form, field: :solo_friendly, prefix: 'sofr', description: t('defaults.description.solo_friendly') %>
        </div>
      </div>
    </div>

    <div class="form-control mt-6">
      <%= form.label :comment, class: 'label' %>
      <%= form.text_area :comment, maxlength: 1500, rows: 7, placeholder: t('defaults.review_comment_placeholder'), class: "textarea textarea-bordered textarea-primary rounded-lg" %>
    </div>

    <div class="text-center mt-6">
      <%= form.submit t(review.persisted? ? 'defaults.update' : 'defaults.post'), class: 'btn btn-accent btn-wide' %>
    </div>
  <% end %>
</div>
