<%= form_with(model: [shop, review], class: "contents") do |form| %>
  <%= render 'shared/error_messages', object: form.object %>

  <div class="my-5 flex flex-col">
    <%= form.label :minimal_interaction, class: 'block my-2' %>
    <div class="rating">
      <%= form.radio_button :minimal_interaction, :int_unspecified, class: 'rating-hidden' %>
      <% Review.int_stars.each do |star| %>
          <%= form.radio_button :minimal_interaction, star, class: "mask mask-star-2 bg-orange-400" %>
      <% end %>
    </div>
  </div>

  <div class="my-5 flex flex-col">
    <%= form.label :equipment_customization, class: 'block my-2' %>
    <div class="rating">
      <%= form.radio_button :equipment_customization, :eqcust_unspecified, class: 'rating-hidden' %>
      <% Review.eqcust_stars.each do |star| %>
          <%= form.radio_button :equipment_customization, star, class: "mask mask-star-2 bg-orange-400" %>
      <% end %>
    </div>
  </div>

  <div class="my-5 flex flex-col">
    <%= form.label :solo_friendly, class: 'block my-2' %>
    <div class="rating">
    <%= form.radio_button :solo_friendly, :sofr_unspecified, class: 'rating-hidden' %>
      <% Review.sofr_stars.each do |star| %>
          <%= form.radio_button :solo_friendly, star, class: "mask mask-star-2 bg-orange-400" %>
      <% end %>
    </div>
  </div>

  <div class="my-5 flex flex-col">
    <%= form.label :comment, class: 'block my-2' %>
    <%= form.text_area :comment, rows: 7, placeholder: t('defaults.review_comment_placeholder'), class: "textarea textarea-bordered" %>
  </div>

  <div class="inline">
    <%= form.submit t('defaults.post'), class: 'btn btn-primary' %>
  </div>
<% end %>
