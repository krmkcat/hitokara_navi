<h1><%= t '.title' %></h1>
<%= form_with url: login_url, class: 'contents' do |f| %>
  <div class="my-5">
    <%= f.label :email %>
    <%= f.email_field :email, class: 'block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full' %>
  </div>

  <div class="my-5">
    <%= f.label :password %>
    <%= f.password_field :password, class: 'block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full' %>
  </div>

  <div class="inline">
    <%= f.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>

<div class='text-center'>
  <%= link_to t('.to_register_page'), new_user_path %>
  <!-- パスワードリセット申請ページができるまでコメントアウト
  <%= link_to t('.password_forget'), '#' %>
  -->
</div>
