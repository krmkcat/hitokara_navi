<%= turbo_frame_tag 'location_select_boxes' do %>
  <%= select :q, :prefecture, Prefecture.selectable.map{ |p| [p.name, prefecture_areas_path(p)] }.unshift([t('defaults.unspecified'), shops_path]), { selected: prefecture_areas_path(@prefecture) }, { onchange: "Turbo.visit(value, {frame: 'location_select_boxes'})", class: 'select select-bordered select-sm w-full max-w-xs' } %>
  <%= select :q, :area_id, @prefecture.areas.pluck(:name, :id), { include_blank: t('defaults.unspecified') }, { class: 'select select-bordered select-sm w-full max-w-xs' } %>
<% end %>