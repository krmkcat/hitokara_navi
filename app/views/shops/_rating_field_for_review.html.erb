<div class="space-y-2">
  <p>
    <%= Review.human_attribute_name(field) + ': ' %>
    <% if review.send("#{field_short}_unspecified?") %>
      評価なし
    <% else %>
      <span class="rating rating-sm">
        <% Review.send("#{field_short}_rates").each do |rate| %>
          <%= radio_button_tag "review_#{review.id}[#{field}]", rate, rate == review.send("#{field}"), { disabled: true, class: "mask mask-star-2 bg-orange-400 cursor-default" } %>
        <% end %>
      </span>
    <% end %>
  </p>
</div>