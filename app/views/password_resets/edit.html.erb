<div class="mx-auto md:w-2/3 w-full max-w-xs">
  <div class="title mb-4 text-center">
    <h1 class="font-bold text-xl">
      <%= t '.title' %>
    </h1>
  </div>
  <div class="form">
    <%= form_with model: @user, url: password_reset_url(@token), data: {turbo_method: :put} do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="fields flex flex-col gap-y-3">
        <div class="email">
          <%= f.label :email %>
          <span class="underline">
            <%= @user.email %>
          </span>
        </div>
        <div class="password">
          <%= f.label :password %>
          <%= f.password_field :password, class: 'input input-bordered w-full max-w-xs' %>
        </div>
        <div class="password-confirmaiton">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, class: 'input input-bordered w-full max-w-xs' %>
        </div>
      </div>
      <div class="button text-center mt-6">
        <%= f.submit class: 'btn btn-accent' %>
      </div>
    <% end %>
  </div>
</div>